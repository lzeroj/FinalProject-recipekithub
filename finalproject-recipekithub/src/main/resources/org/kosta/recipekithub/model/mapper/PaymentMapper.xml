	</update>
	
	<update id="mealkitInventoryUpdate">
		UPDATE MEALKIT_BOARD SET MEALKIT_INVENTORY = MEALKIT_INVENTORY - #{cartQuantity} where MEALKIT_NO = #{cartNo}
	</update>

</mapper>