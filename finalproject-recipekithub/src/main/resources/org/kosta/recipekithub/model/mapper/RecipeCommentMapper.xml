<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="org.kosta.recipekithub.model.mapper.RecipeCommentMapper">
	
		<resultMap type="org.kosta.recipekithub.model.vo.RecipeCommentVO" id="memberNick">
		<result column="member_nick" property="memberVO.memberNick"></result>
		</resultMap>
	<select id="findCommentListByRecipeId" resultMap="memberNick">
		select r.recipe_comment_id, r.recipe_comment_content, m.member_nick, r.recipe_comment_date, r.recipe_comment_edit_date
		from recipe_comment r
		inner join member m ON r.member_email = m.member_email
		where r.recipe_board_id = #{value}
		order by r.recipe_comment_date desc
	</select>
	<delete id="deleteRecipeCommentByCommentId" parameterType="org.kosta.recipekithub.model.vo.RecipeCommentVO">
		delete from recipe_comment where recipe_comment_id = #{value}
	</delete>
</mapper>